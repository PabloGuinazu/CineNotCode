---
interface Props {
	title: string;
	// body: string;
	href: string;
}

const { href, title } = Astro.props;
---
<div class="">
	<li class="list-none w-48 max-w-full h-72 max-h-full border border-orange-500">
		<a href={href} class="block hover:hidden w-48 max-w-full h-72 max-h-full bg-cover bg-center bg-[url('https://res.cloudinary.com/di98wo6zc/image/upload/v1717468123/Guardianes_galaxia2_ovugyo.jpg')]">
        <!-- <img class="w-48" src="https://res.cloudinary.com/di98wo6zc/image/upload/v1717468123/Guardianes_galaxia2_ovugyo.jpg" alt="" > -->
		</a>
		<div class="hidden hover:block bg-gray-600 w-48 max-w-full h-72 max-h-full bg-cover bg-center">
			hola sisjs
		</div>
	</li>
	<h2>
		{title}
	</h2>
</div>
